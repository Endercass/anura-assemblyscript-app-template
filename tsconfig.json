{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "baseUrl": "./",
    "checkJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "YOU_CANT_USE_FRAGMENTS",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "build/dist",
    "paths": {
      "@wasm/*": ["./build/dist/wasm/*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "./",
    "strictNullChecks": true,
    "target": "ESNext",
    "types": ["@mercuryworkshop/alicejs"]
  },
  "exclude": ["/**/node_modules/**/*", "./assembly/**/*.ts"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
